    <record id="week_model_view_form" model="ir.ui.view">
        <field name="name">week.model.form</field>
        <field name="model">week.model</field>
        <field name="arch" type="xml">
            <form string="Ajouter un reporting">
                <!-- <header>
                    <button string="confirm"/>
                </header> -->
                <sheet>
                    <div class="oe_title">
                        <label for="user_id" class="oe_edit_only" strin="Nom du créateur"/>
                        <h3><field name="user_id"/></h3>
                        <label for="name" class="oe_edit_only" strin="Intervale de semaine"/>
                        <h3><field name="name"/></h3>
                        <label for="load_week" class="oe_edit_only" strin="Charge de la semaine"/>
                        <h3><field name="load_week"/></h3>
                    </div>

                    <separator string="Jours" colspan="2"/>

                    <group colspan="2" col="2">
                        <field name="monday_id" string="Lundi"/>
                        <field name="tuesday_id" string="Mardi"/>
                        <field name="wednesday_id" string="Mercredi"/>
                        <field name="thursday_id" string="Jeudi"/>
                        <field name="friday_id" string="Vendredi"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="week_model_view_tree" model="ir.ui.view">
        <field name="name">week.model.tree</field>
        <field name="model">week.model</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="user_id"/>
                <field name="monday_id" string="Lundi" />
                <field name="tuesday_id" string="Mardi"/>
                <field name="wednesday_id" string="Mercredi"/>
                <field name="thursday_id" string="Jeudi"/>
                <field name="friday_id" string="Vendredi"/>
                <field name="load_week" string="Charge de la semaine"/>
            </tree>
        </field>
    </record>
<!-- attrs="{'invisible': [('name', '=', '19/09/2022 - 23/09/2022')]}" -->
    <record id="week_model_action" model="ir.actions.act_window">
        <field name="name">Reporting</field>
        <field name="res_model">week.model</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('user_id', '=', uid)]</field>
    </record>
